<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/content_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher_round"/>

        <TextView
            android:id="@+id/content_header_textView"
            style="@style/TextFont"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="left|center"
            android:paddingLeft="8dp"
            android:text="What's on your mind?"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_linearLayout">

        <TextView
            android:id="@+id/live_header_textView"
            style="@style/TextFont"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Live"
            android:clickable="true"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="57dp"/>

        <TextView
            android:id="@+id/photo_header_textView"
            style="@style/TextFont"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Photo"
            android:clickable="true"
            tools:layout_editor_absoluteX="102dp"
            tools:layout_editor_absoluteY="57dp"/>

        <TextView
            android:id="@+id/checkIn_header_textView"
            style="@style/TextFont"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Check In"
            android:clickable="true"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="57dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/separate_header_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_linearLayout">
    </LinearLayout>

</android.support.constraint.ConstraintLayout>